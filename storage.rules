rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      allow read: if true;  // Anyone can read files
      allow write: if request.auth != null;  // Only authenticated users can write
    }
    
    // Profile images
    match /profile-images/{userId} {
      allow read: if true;  // Anyone can read profile images
      allow write: if request.auth.uid == userId;  // Users can only upload their own profile image
    }
    
    // Event images
    match /event-images/{userId}/{imageId} {
      allow read: if true;  // Anyone can read event images
      allow write: if request.auth.uid == userId;  // Users can only upload their own event images
    }

    // Post images
    match /post-images/{userId}/{imageId} {
      allow read: if true;  // Anyone can read post images
      allow write: if request.auth.uid == userId;  // Users can only upload their own post images
    }
  }
} 